<!--mine.wxml-->
<scroll-view scroll-y class="container">
  <view class="userinfo">
    <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo"> 获取头像昵称 </button>
    <block wx:else>
      <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="userinfo-nickname">{{userInfo.nickName}}</text>
    </block>
  </view>
  <view wx:for="{{items}}" wx:key="{{item.text}}">
    <navigator class="navigator-item" url="{{item.url}}" hover-class="navigator-hover">{{item.text}}</navigator>
    <view class='line'></view>
  </view>
  <button style='margin: 30rpx 25rpx 0 25rpx' bindtap="uploadFile">上传图片</button>
  <button style='margin: 30rpx 25rpx 0 25rpx' bindtap="downloadFile">下载文件</button>
  <button style='margin: 30rpx 25rpx 0 25rpx' bindtap="pushData">上传数据</button>
  <button style='margin: 30rpx 25rpx 0 25rpx' bindtap="pullData">下载数据</button>
  <image src="{{imageUrl}}"></image>
</scroll-view>
